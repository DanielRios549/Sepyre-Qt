{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
        "baseUrl": ".",
		"allowJs": true,
		"lib": ["DOM"],
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
        "paths": {
            "$/*": ["src/*"]
        }
	}
}
