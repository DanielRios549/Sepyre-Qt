{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
        "baseUrl": ".",
        "target": "ES2022",
		"allowJs": true,
		"lib": ["DOM", "DOM.Iterable", "ES2022"],
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "paths": {
            "$lib":["src/lib"],
            "$lib/*":["src/lib/*"],
            "$/*": ["src/*"]
        }
	},
    "include": [
        "pages/**/*.svelte",
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.svelte",
        "**/*.test.ts"
    ],
    "exclude": [
        ".svelte-kit",
        ".venv",
        "node_modules",
        "build"
    ]
}
